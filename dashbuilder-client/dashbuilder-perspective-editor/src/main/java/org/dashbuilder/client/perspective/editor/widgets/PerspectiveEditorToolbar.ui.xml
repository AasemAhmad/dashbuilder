<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <ui:style>
    .dialog {
      width: 180px;
      border-radius: 5px;
      border-width: 5px;
      border-style: solid;
      background-color: #d3d3d3;
      padding: 5px;
    }
    .content {
      padding: 10px;
    }
    .box {
      margin: 2px;
      width: 135px;
    }
    .namePanel {
      margin: 2px;
    }
  </ui:style>

  <g:DialogBox ui:field="toolbarDialog" autoHide="false" modal="false" styleName="{style.dialog}">
    <g:caption><b>Perspective Editor</b></g:caption>
    <g:FlowPanel styleName="{style.content}">
      <g:FlowPanel styleName="{style.namePanel}" ui:field="namePanel">
        <g:Label>Name</g:Label>
        <g:TextBox ui:field="nameBox" styleName="{style.box}" />
      </g:FlowPanel>
      <g:Button ui:field="deleteButton">Delete Perspective</g:Button>
      <g:Button ui:field="createButton">New Perspective</g:Button>
      <g:FlowPanel ui:field="componentsPanel" />
      <g:Button ui:field="closeButton">Close</g:Button>
    </g:FlowPanel>
  </g:DialogBox>

</ui:UiBinder>
