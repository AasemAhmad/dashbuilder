<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tb="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:ufm="urn:import:org.uberfire.client.views.bs2.maximize"
             xmlns:uf="urn:import:org.uberfire.client.workbench.widgets.listbar">

<ui:with field="res" type="org.uberfire.client.resources.WorkbenchResources"/>

  <ui:style>
    .context-menu {
      display: inline;
      margin-right: 5px;
    }
  </ui:style>

  <uf:ResizeFocusPanel ui:field="toolbarPanel">
    <g:FlowPanel>

      <g:FlowPanel styleName="{style.context-menu}" ui:field="contextMenu"/>
      <tb:ButtonGroup ui:field="changeTypeButtonContainer" title="Show as...">
        <tb:DropdownButton  ui:field="changeTypeButton" size="MINI" icon="ASTERISK" />
      </tb:ButtonGroup>
      <tb:ButtonGroup ui:field="closeButtonContainer">
        <tb:Button ui:field="closeButton" size="MINI" icon="REMOVE" />
      </tb:ButtonGroup>
      <tb:ButtonGroup ui:field="dropdownCaretContainer">
        <tb:DropdownButton ui:field="dropdownCaret" size="MINI"/>
      </tb:ButtonGroup>
      <tb:ButtonGroup ui:field="maximizeButtonContainer">
        <ufm:MaximizeToggleButton ui:field="maximizeButton"/>
      </tb:ButtonGroup>

    </g:FlowPanel>

  </uf:ResizeFocusPanel>

</ui:UiBinder>
