<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:uf="urn:import:org.uberfire.client.workbench.widgets.listbar"
             xmlns:my="urn:import:org.dashbuilder.client.workbench.panels.impl">

  <ui:with field="res" type="org.uberfire.client.resources.WorkbenchResources"/>

  <ui:style>
    .better_margin {
      margin-top: 5px;
      margin-right: 10px;
    }

    .pull-right {
      float: right;
    }

    .fill-parent {
      position: relative;
      top: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
    }
  </ui:style>

  <uf:ResizeFocusPanel>
    <g:FlowPanel styleName="{style.fill-parent}">

      <g:FlowPanel styleName="{style.pull-right} {style.better_margin}" ui:field="panelToolbar" />
      <my:ResizeTabPanel ui:field="tabPanel" tabPosition="ABOVE"/>

    </g:FlowPanel>
  </uf:ResizeFocusPanel>

</ui:UiBinder>
