<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <ui:with field="i18n" type="org.dashbuilder.client.resources.i18n.MenusConstants"/>

  <ui:style type="org.dashbuilder.client.menu.widgets.MenuView.MenuViewStyle">
    .mainPanel {
      width: 100%;
    }
    .addButton {
      float: left;
      color: white;
      margin-top: 10px;
    }
    .removeButtonPanel {
      float: left;
      margin-top: 10px;
      padding-left: 10px;
      padding-right: 10px;
    }
    .removeButtonPanelDragOver {
      background-color: red;
      border-radius: 5px 5px 5px 5px;
      box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05) inset;
    }
    .removeButton {
      float: left;
      color: white;
      cursor: default;
    }
    .menuItemModalPanel {
      
    }
    .menuItemForm {
      height: 99%;
    }
    .menuItemOkButtonPanel {
      width: 100%;
    }
    .menuItemDropOver_b {
      border-bottom: 2px solid blue;
    }
    .menuItemDropOver_l {
      border-left: 2px solid blue;
    }
    .menuItemDropOver_r {
      border-right: 2px solid blue;
    }
    .okButton {
      
    }
    .labelError {
      color: red;
    }
  </ui:style>
  <g:FlowPanel addStyleNames="{style.mainPanel} ">

    <!-- Edition or creation panel for a menu item. -->
    <b:Modal ui:field="menuItemModalPanel" title="{i18n.newMenuItem}" addStyleNames="{style.menuItemModalPanel}"
             backdrop="STATIC" keyboard="true" animation="true" closeVisible="true">
      <b:WellForm ui:field="menuItemForm" addStyleNames="{style.menuItemForm}">
        <!-- Name title. -->
        <b:ControlLabel>
          <font color="red">*</font>
          <base:InlineLabel ui:field="nameLabel" text="{i18n.name}"/>
        </b:ControlLabel>
        <!-- Name text box. -->
        <b:Controls>
          <b:TextBox ui:field="menuItemName" placeholder="{i18n.name_placeholder}"/>
        </b:Controls>
        <!-- Perspective title. -->
        <b:ControlLabel>
          <font color="red">*</font>
          <base:InlineLabel ui:field="perspectiveLabel" text="{i18n.perspective}"/>
        </b:ControlLabel>
        <!-- Perspective drop down. -->
        <b:Controls>
          <b:DropdownButton ui:field="menuItemPerspectives" title="{i18n.perspective_placeholder}"/>
        </b:Controls>
        <!-- The confirm button. -->
        <g:HorizontalPanel styleName="{style.menuItemOkButtonPanel}">
          <g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
            <b:Button ui:field="menuItemOkButton" title="{i18n.ok}" type="SUCCESS"
                      text="{i18n.create}" addStyleNames="{style.okButton} "/>
          </g:cell>
        </g:HorizontalPanel>
        
      </b:WellForm>
    </b:Modal>

    <b:ResponsiveNavbar position="TOP" inverse="true">
      <b:NavCollapse>
        <b:Nav alignment="LEFT" ui:field="menuBarLeft">
        </b:Nav>
        <b:Nav ui:field="menuBarCenter">
        </b:Nav>
        <b:Nav alignment="RIGHT" ui:field="menuBarRight">
        </b:Nav>
        <b:NavForm ui:field="barForm" alignment="NONE" visible="false">
          <b:Button ui:field="addButton" title="{i18n.addMenuItem}"
                    icon="PLUS" type="LINK" stylePrimaryName="{style.addButton} "/>
          <g:FlowPanel ui:field="removeButtonPanel" addStyleNames="{style.removeButtonPanel}">
            <b:Button ui:field="removeButton" title="{i18n.removeMenuItem}"
                      icon="TRASH" type="LINK" stylePrimaryName="{style.removeButton} "/>  
          </g:FlowPanel>
        </b:NavForm>
      </b:NavCollapse>
    </b:ResponsiveNavbar>
  </g:FlowPanel>

</ui:UiBinder> 